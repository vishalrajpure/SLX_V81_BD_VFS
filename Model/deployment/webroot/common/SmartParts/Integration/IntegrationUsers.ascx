protected void grdUsers_InsertAssociationAction(object sender, EventArgs e) {

	    string text = Request.Form.Get(IntegrationUsersgrdUsers_DataCarrier.UniqueID);
    if (text.Length > 0)
    {
    var feed = new Sage.Integration.Entity.Feeds.UserIntegrationMapFeed();

		using (var stream = new System.IO.MemoryStream(Encoding.UTF8.GetBytes(text)))
		{
			new Sage.Common.Syndication.JsonSerializer().LoadFromStream<Sage.Integration.Entity.Feeds.UserIntegrationMapEntry>(feed, stream);
		}

		if (feed == null) return;
		var transformer =
			Sage.Platform.Application.ApplicationContext.Current.Services.Get
				<Sage.Platform.SData.IAtomEntryToEntityTransformationService>();
    	
		var entity = BindingSource.Current as Sage.Entity.Interfaces.IIntegration;

		if (transformer != null && entity != null && entity.UserIntegrationMaps.Count == 0)
		{
			foreach (Sage.Integration.Entity.Feeds.UserIntegrationMapEntry entry in feed.Entries)
			{
				var item = transformer.ConvertEntry(entry) as Sage.Entity.Interfaces.IUserIntegrationMap;
				if (item != null)
				{
					item.Integration = entity;
					entity.UserIntegrationMaps.Add(item);
				}
			}
			entity.Persisted -= grdUsers_InsertAssociationAction;
			entity.Save();
		}
	}



}

